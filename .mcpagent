                    args[k] = v
            res = st.session_state.client.call_tool(tool_to_call, args)
            st.session_state.chat.append({"role": "assistant", "content": f"Tool {tool_to_call} result:\n{pretty_json(res)}"})
            st.experimental_rerun()

