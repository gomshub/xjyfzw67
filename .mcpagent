# ---- Build Claude-like MCP Desktop image ----
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy Streamlit app
COPY mcp_desktop.py .

# Streamlit default port
