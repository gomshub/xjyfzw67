ğŸ“ flask-celery-chart/values.yaml

flask:
  image: flask-app:latest
  service:
    type: ClusterIP
    port: 5000

celery:
  image: celery-worker:latest
  replicaCount: 1

flower:
  image: mher/flower
  service:
    port: 5555

redis:
  image: redis:alpine
  service:
    port: 6379

rabbitmq:
  image: rabbitmq:3-management
  service:
    port: 5672
    managementPort: 15672

ingress:
  enabled: true
  className: "nginx"
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
  hosts:
    - host: flask.local
      paths:
        - path: /
          pathType: Prefix
          serviceName: flask
    - host: flower.local
      paths:
        - path: /
          pathType: Prefix
          serviceName: flower
  tls: []


