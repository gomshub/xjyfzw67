    "Authorization": "Bearer YOUR_JIRA_API_TOKEN",
    "Content-Type": "application/json"
}

# Database Connection Config (Based on Job Name)
DB_CONFIG = {
    "ENV1": {"url": "jdbc:oracle:thin:@db1_host:1521/db1", "username": "user1", "password": "pass1"},
