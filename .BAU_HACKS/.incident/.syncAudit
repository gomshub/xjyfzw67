import jaydebeapi

DB_MAPPING = {
    "JobA": {
        "url": "jdbc:oracle:thin:@//db-a.example.com:1521/service_name",
        "user": "user_a",
        "password": "password_a",
        "driver": "oracle.jdbc.driver.OracleDriver",
